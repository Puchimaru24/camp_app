<% if notice %>
  <p class="alert alert-primary text-center mt-0"><%= notice %><button type="button" class="close" data-dismiss="alert">&times;</button></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger text-center mt-0"><%= alert %><button type="button" class="close" data-dismiss="alert">&times;</button></p>
<% end %>