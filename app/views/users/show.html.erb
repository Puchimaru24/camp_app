<div class="main-content">
  <div class="container">
    <h1>Profile</h1>
    
    <div class="profile">
      <div class="user-img">
        <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar, class: "avatar rounded-circle mx-auto d-block" %>
        <% else %>
          <img class="avatar rounded-circle mx-auto d-block" src= "/assets/default_user.png" alt="image">
        <% end %>
      </div>
      
      <div class="user-name">
        <%= @user.username %>
      </div>
      
      <% if current_user == @user %>
        <div class="user-email text-secondary">
          <%= @user.email %>
        </div>
      <% end %>
      
      <p class="user-profile-title">自己紹介</p>
      <div class="user-profile">
        <%= @user.profile %>
      </div>
      
      <% if current_user == @user %>
        <div class="link">
          <%= link_to("/users/edit") do %>
            <i class="fas fa-edit"></i>
          <% end %>
        </div>
      <% end %>
    </div>
    
    <div class="posts-index">
      <% @user.posts.each do |post| %>
        <div class="posts-index-item mb-20">
          <div class="posts-index-user">
            <!--avatar-->
            <div class="posts-index-img d-inline">
              <%= link_to("/users/#{post.user.id}", class: "text-decoration-none") do %>
                <% if post.user.avatar.attached? %>
                  <%= image_tag post.user.avatar, class: "avatar-index rounded-circle mx-auto" %>
                <% else %>
                  <img class="avatar-index rounded-circle mx-auto" src="<%= "/assets/default_user.png" %>" alt="Userimage">
                <% end %>
              <% end %>
            </div>
            <!--username-->
            <div class="posts-index-username d-inline">
              <%= link_to post.user.username, "/users/#{post.user.id}", class: "text-dark font-weight-bold" %>
            </div>
            <span class="text-secondary">
            ・<%= distance_of_time_in_words_to_now(post.created_at) %>前
            </span>
          </div>
          <!--content-->
          <div class="post-content">
            <%= link_to(post.content, "/posts/#{post.id}", class: "text-dark no-deco") %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>