<div class="main-content">
  <div class="container">
    <h1>ユーザーを編集する</h1>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      
      <div class="field">
        <%= f.label "アバター画像 (左から1,2,3,4,5)" %><br />
        <%= f.number_field :image_id, autofocus: true, autocomplete: "image_id", class: "form-control", min: 1, max: 5  %>
      </div>

      <div class="container sample-images">
        <%= image_tag "user1.png", class: "sample-img" %>
        <%= image_tag "user2.png", class: "sample-img" %>
        <%= image_tag "user3.png", class: "sample-img" %>
        <%= image_tag "user4.png", class: "sample-img" %>
        <%= image_tag "user5.png", class: "sample-img" %>
      </div>
      
      <div class="field">
        <%= f.label :ユーザー名 %><br />
        <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control" %>
      </div>
      
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
      
      <div class="field">
        <%= f.label :自己紹介 %><br />
        <%= f.text_area :profile, autofocus: true, autocomplete: "profile", class: "form-control" %>
      </div>
    
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <br>

      <div class="actions">
        <%= f.submit "編集完了", class: "btn btn-primary" %>
      </div>
    <% end %>
    
    <div class="delete-account">
      <h3>アカウントを削除</h3>
      <%= button_to "削除", registration_path(resource_name), data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger", method: :delete %>
    </div>
    
    <%= link_to "戻る", :back %>
  </div>
</div>