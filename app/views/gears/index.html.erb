<div class="container">
  <h1>My Gear</h1>
  
  <% @gears.each do |gear| %>
    <div class="gear-index-item mb-20">
      <% if gear.image.attached? %>
        <%= image_tag gear.image, class: "index-img" %>
      <% else %>
        <img class="index-img" src="<%= "/images/default_gear.jpg" %>" alt="Index image cap">
      <% end %>
      <%= link_to(gear.name, "/gears/#{gear.id}") %>
    </div>
  <% end %>
  
  <%= link_to(gears_new_path) do %>
    <button type="button" class="btn btn-primary rounded-circle p-0" style="width:2rem;height:2rem;">
      ï¼‹
    </button>
  <% end %>
</div>
